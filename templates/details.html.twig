{% extends "base.html.twig" %}
{% block body %}
    <div class="modal" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true"></span>
        </button>
      </div>
      <div class="modal-body">
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary">Save changes</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
    <div class="trck_header">
        <div class="featured_img">
        <div class="img_container">
            <img class="img-fluid" src={{trick.getFeaturedImage.path}} alt="image de mise en avant du figure">
        </div>
        <h1> {{trick.name}} </h1>
        <div class="edit-btn">
            <a href="#" class="bg-primary">
                <i class="fas fa-pencil-alt"></i>
            </a>
            <a href="#" class="bg-danger">
                <i class="fas fa-trash-alt"></i>
            </a>
        </div>
    </div>
    </div>
    <div class="trick_files">
        {% for file in trick.files %}
            <div class="file">
            {% if file.typeFile == "image" %}
            <a href={{file.path}} data-lightbox="image-gallery">
                <img src={{file.path}} alt="image du trick">
            </a>
            {% else %}
                    <span class="iframe-contaier"><iframe {{file.path}}></iframe></span>
            {% endif %}
            </div>
        {% endfor %}
    </div>
    <div class="description">
            <p>
                {{trick.description}}
            </p>
    </div>
    <div class="infos">
        <ul>
            <li class="bg-primary">Date de cr√©ation: {{trick.createdAt|date("d-m-Y H:i:s")}} </li>
            <li class="bg-success">Groupe: {{trick.groupeId.name}} </li>
            <li class="bg-info">Date de modification: {{trick.updateAt|date("d-m-Y H:i:s")}} </li>
        </ul>
    </div>
    <div class="comment">
        <h2>Commentaire</h2>
    </div>
{% endblock %}