{% extends "base.html.twig" %}
{% block body %}
	<h1 class="mb-2">Liste des figures</h1>
	<div class="row">
		{% for trick in tricks %}
			<div class="col-md-4">
				<div class="card">
					<img src={{trick.getFeaturedImage.path}} alt="Snowbord image" class="img-fluid">
					<div class="card-body">
						<a href="trick/{{trick.slug}}">
							<h4 class="card-title">{{trick.name}}</h4>
						</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
